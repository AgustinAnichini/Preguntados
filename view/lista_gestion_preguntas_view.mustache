<main>

    {{#titulo-preguntas-existentes}}
        <h1 class="text-warning">{{titulo-preguntas-existentes}}</h1>
    {{/titulo-preguntas-existentes}}

    {{#titulo-preguntas-sugeridas}}
        <h1 class="text-warning">{{titulo-preguntas-sugeridas}}</h1>
    {{/titulo-preguntas-sugeridas}}

    {{#titulo-preguntas-reportadas}}
        <h1 class="text-warning">{{titulo-preguntas-reportadas}}</h1>
    {{/titulo-preguntas-reportadas}}

    <div class="container d-flex justify-content-between align-items-center mb-5">
        <form action="/Editor" method="post" class="botones">
            <input type="submit" name="volverLobby" id="volverLobby" class="btn btn-outline-warning" value="Lobby">
        </form>
    </div>

    <section class="container">
        <table class="table">
            <thead>
            <tr>
                {{#preguntas-sugeridas}}

                {{/preguntas-sugeridas}}
                {{^preguntas-sugeridas}}
                    <th scope="col" class="text-light">Numero</th>
                {{/preguntas-sugeridas}}
                <th scope="col" class="text-light">Texto pregunta</th>
                <th scope="col" class="text-light">AcciÃ³n</th>
            </tr>
            </thead>
            <tbody>


            {{#preguntas-existentes}}
                <tr>
                    <td scope="row" class="text-light">{{id}}</td>
                    <td class="text-light">{{texto}}</td>
                    <td class="text-light"><a href="/Editor/gestionarPreguntaExistente?id={{id}}">Gestionar pregunta</a></td>
                </tr>
            {{/preguntas-existentes}}
            {{#preguntas-sugeridas}}
                <tr>
                    <td class="text-light">{{texto}}</td>
                    <td class="text-light"><a href="/Editor/gestionarPreguntaSugerida?id={{id}}">Gestionar pregunta</a></td>
                </tr>
            {{/preguntas-sugeridas}}
            {{#preguntas-reportadas}}
                <tr>
                    <td scope="row" class="text-light">{{id}}</td>
                    <td class="text-light">{{texto}}</td>
                    <td class="text-light"><a href="/Editor/gestionarPreguntaReportada?id={{id}}">Gestionar Pregunta</a></td>
                </tr>
            {{/preguntas-reportadas}}
            </tbody>
        </table>
    </section>



</main>