<main class="d-flex align-items-center justify-content-center" style="height: 45rem;">
    <div class="container w-50 text-center login-container bg-warning p-5">
        <div class="login-card col-md">
            <div class="login-header">
                <h2>Cada día se aprende algo nuevo</h2>
                <h3>Inicia sesión para jugar</h3>
            </div>
            <form method="post" action="/home/login" class="d-flex flex-column align-items-center text-left mt-4">
                <div class="form-group w-50">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group w-50">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block w-25">Ingresar</button>
            </form>
            <p class="mt-3 text-center">¿No estás registrado? <a href="/Registro">Regístrate</a></p>
        </div>

        <div class="container w-50 contendorMSJ" id="mensajeSugerir">
            {{#mensajeUsuarioValidado}}
                <a id="boton" class="cerrar"><img src="../public/img/x-circle.svg"></a>
                <p class="text-light text-center bg-primary p-1 rounded">{{mensajeUsuarioValidado}}</p>
            {{/mensajeUsuarioValidado}}
        </div>
    </div>
</main>
<script src="/public/js/mensajeUsuario.js"></script>
