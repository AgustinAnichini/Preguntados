<main class="main-perfil container py-5">
    {{#usuario}}
        <div class="row align-items-center mb-4">
            <div class="col-md-4 text-center">
                <img src="/public/{{foto_perfil}}.jpg" class="img-fluid rounded-circle shadow-sm" alt="Foto de {{nombre_completo}}">
            </div>
            <div class="col-md-8">
                <h1 class="h1-perfil text-warning">{{nombre_completo}}</h1>
            </div>
        </div>

        <section class="datos-usuario">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-white">
                            <h3 class="card-title mb-0 text-dark">Datos Personales</h3>
                        </div>
                        <ul class="list-group list-group-flush text-dark">
                            <li class="list-group-item "><strong>Nombre de usuario:</strong> {{nombre_usuario}}</li>
                            <li class="list-group-item"><strong>Mail:</strong> {{mail}}</li>
                            <li class="list-group-item"><strong>Fecha de nacimiento:</strong> {{fecha_nacimiento}}</li>
                            <li class="list-group-item"><strong>País:</strong> {{pais}}</li>
                            <li class="list-group-item"><strong>Ciudad:</strong> {{ciudad}}</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-white">
                            <h3 class="card-title mb-0 text-dark">Datos de Partida</h3>
                        </div>
                        <ul class="list-group list-group-flush text-dark">
                            <li class="list-group-item"><strong>Ranking:</strong> {{ranking}}</li>
                            <li class="list-group-item"><strong>Puntaje de ranking:</strong> {{puntajeRanking}}</li>
                            <li class="list-group-item"><strong>Nivel de usuario:</strong> {{nivel}}</li>
                            <li class="list-group-item"><strong>Puntaje más alto:</strong> {{puntajeMasAlto}}</li>
                            <li class="list-group-item"><strong>Puntaje total:</strong> {{puntajeTotal}}</li>
                            <li class="list-group-item"><strong>Total de partidas jugadas:</strong> {{partidasJugadas}}</li>
                            <li class="list-group-item"><strong>Total de preguntas acertadas:</strong> {{preguntasAcertadasTotales}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <div class="text-center">
            <form action="/Lobby" method="post" class="d-inline">
                <button type="submit" name="comenzar" class="btn btn-outline-warning btn-lg">Lobby</button>
            </form>
        </div>
    {{/usuario}}
</main>
